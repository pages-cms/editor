{
  "$schema": "https://ui.shadcn.com/schema/registry.json",
  "name": "@pages-cms/editor",
  "homepage": "https://github.com/pages-cms/editor",
  "items": [
    {
      "name": "editor",
      "type": "registry:component",
      "title": "Editor",
      "description": "A format-aware HTML/Markdown editor built on TipTap.",
      "registryDependencies": ["textarea"],
      "dependencies": [
        "lucide-react",
        "@tiptap/core",
        "@tiptap/extension-image",
        "@tiptap/extension-link",
        "@tiptap/extension-table",
        "@tiptap/extension-table-cell",
        "@tiptap/extension-table-header",
        "@tiptap/extension-table-row",
        "@tiptap/extension-underline",
        "@tiptap/markdown",
        "@tiptap/react",
        "@tiptap/starter-kit",
        "@tiptap/suggestion",
        "tippy.js"
      ],
      "files": [
        {
          "path": "registry/default/editor/editor.tsx",
          "type": "registry:component",
          "target": "components/ui/page-editor/editor.tsx"
        },
        {
          "path": "registry/default/editor/slash-command/commands.ts",
          "type": "registry:component",
          "target": "components/ui/page-editor/slash-command/commands.ts"
        },
        {
          "path": "registry/default/editor/slash-command/commands-list.tsx",
          "type": "registry:component",
          "target": "components/ui/page-editor/slash-command/commands-list.tsx"
        },
        {
          "path": "registry/default/editor/slash-command/suggestion.tsx",
          "type": "registry:component",
          "target": "components/ui/page-editor/slash-command/suggestion.tsx"
        }
      ]
    }
  ]
}
